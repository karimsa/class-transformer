{
  "name": "@karimsa/class-transformer",
  "version": "0.0.1-2",
  "license": "MIT",
  "main": "index.dist.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "esbuild": "esbuild --format=cjs --target=node12 --bundle --external:benchmark --external:class-transformer --external:reflect-metadata",
    "build": "yarn esbuild src/index.ts --outfile=index.dist.js",
    "test": "jest",
    "format": "prettier --write src",
    "benchmark": "yarn build && ts-node benchmark/index.ts",
    "profile": "rm -f isolate*.log; yarn build && node --prof `which ts-node` benchmark/profiler-sample.ts && node --prof-process isolate* > profile.log"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/benchmark": "^2.1.1",
    "@types/lodash": "^4.14.177",
    "babel-jest": "^27.4.2",
    "benchmark": "^2.1.4",
    "class-transformer": "^0.5.1",
    "esbuild": "^0.14.2",
    "jest": "^27.4.3",
    "lodash": "^4.17.21",
    "prettier": "^2.5.1",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^27.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
